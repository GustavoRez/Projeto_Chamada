<!DOCTYPE html>
<html lang="pt-br">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">
    <title>Criar!</title>
</head>

<body>

    <a href="/home"><img src="<%= imgPerfil %>" style="width: 3rem; height: 3rem;" alt="Perfil de <%= username %>"></a>

    <form id="criarUsuario">
        <h1>Criar usuário:</h1>
        <label for="nome">Nome: <span style="color: red;">*</span></label>
        <input type="text" id="nome" name="nome">
        <label for="pass">Senha: <span style="color: red;">*</span></label>
        <input type="password" id="pass" name="pass">
        <label>Cargo: <span style="color: red;">*</span></label>
        <input type="radio" name="role" id="prof" value="PROF">
        <label for="prof">Professor</label>
        <input type="radio" name="role" id="aluno" value="ALUNO">
        <label for="aluno">Aluno</label>
        <button type="submit">Enviar</button>
    </form>
    <div id="messageUser"></div>

    <form id="criarCurso">
        <h1>Criar curso:</h1>
        <label for="nomeC">Nome: <span style="color: red;">*</span></label>
        <input type="text" id="nomeC" name="nomeC" required>
        <label for="sigla">Sigla: <span style="color: red;">*</span></label>
        <input type="text" id="sigla" name="sigla" required>
        <label for="descricao">Descrição:</label>
        <textarea name="descricao" id="descricao" rows="1" cols="30"></textarea>

        <button type="submit">Enviar</button>
    </form>
    <div id="messageCurso"></div>

    <form id="criarDisciplina">
        <h1>Criar materia:</h1>
        <label for="nomeD">Nome: <span style="color: red;">*</span></label>
        <input type="text" id="nomeD" name="nomeD" required>
        <label for="curso">Curso: <span style="color: red;">*</span></label>
        <select type="text" id="curso" name="curso" required>
            <option value=1>ADS</option>
            <option value=2>PQ</option>
            <option value=3>COMEX</option>
            <option value=4>GE</option>
            <option value=5>DSM</option>
        </select>
        <label for="semestre">Semestre:</label>
        <input type="number" name="semestre" id="semestre" min="0" max="6">
        <label for="professor">Mestrante:</label>
        <input type="text" name="professor" id="professor">        

        <button type="submit">Enviar</button>
    </form>
    <div id="messageDisciplina"></div>

    <script>
        document.getElementById('criarUsuario').addEventListener('submit', function (e) {
            e.preventDefault();

            const formData = new FormData(this);
            const formObject = {};
            formData.forEach((value, key) => formObject[key] = value);


            fetch('/criarUsuario', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify(formObject)
            })
                .then(response => response.json())
                .then(data => {
                    const messageDiv = document.getElementById('messageUser');
                    if (data.success) {
                        messageDiv.innerHTML = `<p style="color: green;">${data.message}</p>`;
                    } else {
                        messageDiv.innerHTML = `<p style="color: red;">${data.message}</p>`;
                    }
                })
                .catch(error => {
                    console.error('Erro ao enviar o formulário:', error);
                    document.getElementById('message').innerHTML = `<p style="color: red;">Erro inesperado.</p>`;
                });
        });
        document.getElementById('criarCurso').addEventListener('submit', function (e) {
            
            e.preventDefault();

            const formData = new FormData(this);
            const formObject = {};
            formData.forEach((value, key) => formObject[key] = value);


            fetch('/criarCurso', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify(formObject)
            })
                .then(response => response.json())
                .then(data => {
                    const messageDiv = document.getElementById('messageCurso');
                    if (data.success) {
                        messageDiv.innerHTML = `<p style="color: green;">${data.message}</p>`;
                    } else {
                        messageDiv.innerHTML = `<p style="color: red;">${data.message}</p>`;
                    }
                })
                .catch(error => {
                    console.error('Erro ao enviar o formulário:', error);
                    document.getElementById('message').innerHTML = `<p style="color: red;">Erro inesperado.</p>`;
                });
        });
        document.getElementById('criarDisciplina').addEventListener('submit', function (e) {
            e.preventDefault();

            const formData = new FormData(this);    
            const formObject = {};
            formData.forEach((value, key) => formObject[key] = value);            

            fetch('/criarDisciplina', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify(formObject)
            })
                .then(response => response.json())
                .then(data => {
                    const messageDiv = document.getElementById('messageDisciplina');
                    if (data.success) {
                        messageDiv.innerHTML = `<p style="color: green;">${data.message}</p>`;
                    } else {
                        messageDiv.innerHTML = `<p style="color: red;">${data.message}</p>`;
                    }
                })
                .catch(error => {
                    console.error('Erro ao enviar o formulário:', error);
                    document.getElementById('message').innerHTML = `<p style="color: red;">Erro inesperado.</p>`;
                });
        });
    </script>



    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
        crossorigin="anonymous"></script>
</body>

</html>